{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/staging/prosecutors/json/schemas/organisation.json",
  "type": "object",
  "description": "",
  "properties": {
    "organisationName": {
      "type": "string",
      "description": "Name of an organisation, e.g., Marks and Spencer.",
      "maxLength": 255
    },
    "companyTelephoneNumber": {
      "pattern": "^[0-9+\\ \\-]{10,}$",
      "description": ""
    },
    "aliasOrganisationNames": {
      "description": "Also known as company name.",
      "type":"array",
      "minItems": 1,
      "pattern": "^[a-zA-Z0-9-]*$",
      "maxLength": 80,
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "organisationName"
  ],
  "additionalProperties" : false
}